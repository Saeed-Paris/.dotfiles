# -------------------------------- #
# Git
# -------------------------------- #

# Use github/hub
function glp() {
  git --no-pager log -$1
}

function gd() {
  if [[ -z $1 ]] then
    git diff --color | diff-so-fancy
  else
    git diff --color $1 | diff-so-fancy
  fi
}

function gdc() {
  if [[ -z $1 ]] then
    git diff --color --cached | diff-so-fancy
  else
    git diff --color --cached $1 | diff-so-fancy
  fi
}

# -------------------------------- #
# Directories
#
# I put
# `~/i` for my projects
# `~/f` for forks
# `~/r` for reproductions
# '~/w' for work(Sadge)
# -------------------------------- #

function work() {
  cd ~/Paris/w/$1
}

function i() {
  cd ~/Paris/i/$1
}

function repros() {
  cd ~/Paris/r/$1
}

function forks() {
  cd ~/Paris/f/$1
}

function pr() {
  if [ $1 = "ls" ]; then
    gh pr list
  else
    gh pr checkout $1
  fi
}

function dir() {
  mkdir $1 && cd $1
}

function clone() {
  if [[ -z $2 ]] then
    gh repo clone "$@" && cd "$(basename "$1" .git)"
  else
    gh repo clone "$@" && cd "$2"
  fi
}

# Clone to ~/i and cd to it
function clonei() {
  i && clone "$@" && nvim . && cd ~2
}

function clonew() {
  work && clone "$@" && nvim . && cd ~2
}

function cloner() {
  repros && clone "$@" && nvim . && cd ~2
}

function clonef() {
  forks && clone "$@" && nvim . && cd ~2
}

function codei() {
  i && nvim "$@" && cd "$@"
}

function serve() {
  if [[ -z $1 ]] then
    live-server dist
  else
    live-server $1
  fi
}

